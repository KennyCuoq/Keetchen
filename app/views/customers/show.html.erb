<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-10 col-lg-offset-2 col-lg-8">
        <h1 id="customer-show-title"><%= @customer.user.first_name.capitalize%> <%= @customer.user.last_name%></h1>
      <div class="container-personal-info">
        <div class="container-avatar">
          <% if @customer.photo.blank? %>
            <%= image_tag 'http://www.travelcontinuously.com/wp-content/uploads/2018/04/empty-avatar.png',class: "customer-avatar"  %>
          <% else %>
          <%= cl_image_tag @customer.photo, crop: :fill, class: "customer-avatar" %>
          <% end %>
        </div>
        <h3>Personal Info</h3>
        <p><b><%= @customer.user.first_name.capitalize %> <%= @customer.user.last_name.capitalize %></b></p>
        <p>Email: <%= @customer.user.email %></p>
        <br>
        <p id="customer-id">Customer ID: <%= @customer.id %></p>
        <div class="edit-button-1">
          <%= link_to "EDIT", edit_user_registration_path(@customer.user) %>
        </div>
      </div>
      <div class="container-personal-password">
        <h3>Password</h3>
        <p>Current password</p>
        <p>•••••••••••••</p>
        <div class="edit-button-2">
          <%= link_to "EDIT", edit_user_registration_path(@customer.user) %>
        </div>
      </div>

      <% unless @customer.user.employee.nil? %>
        <div class="container-employee">
         <h3>Employee pages</h3>
          <%= link_to "QR scan", employee_path(current_user.employee), class: 'btn btn-info' %>
          <% if @customer.user.employee.admin == true %>
            <%= link_to "Admin page", admin_customer_path(current_user.customer), class: 'btn btn-info' %>
          <% end %>
        </div>
      <% end %>
      <div class="container-personal-photo">
        <h3>Photo</h3>
        <%= simple_form_for(@customer) do |f| %>
        <%= f.input :photo, label: false %>
        <%= f.input :photo_cache, as: :hidden, label: false %>
        <%= f.submit "Update photo", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
