<div id="history-container">
  <h1>Rate your meals</h1>
</div>

<div class="card-container">
  <div class="container">
    <div class="row">
      <% @orders.each do |x| %>
      <div class="col-sm-offset-1 col-xs-11  col-lg-4" id="row">
        <div class="card" id="meal-card-history" style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url("<%= image_path x.meal_date.meal.photo %>");'>
          <div class="card-category"><%=x.meal_date.date%></div>
          <div class="card-description">
            <h2><p><%= x.meal_date.meal.name %></p></h2>
          </div>
          <div class="rating">
            <%= link_to customer_reviews_path(current_user, num_stars: 1, meal_date_id: x.meal_date.id), method: :post do %>
              <i class="far fa-star"></i>
            <% end %>
            <%= link_to customer_reviews_path(current_user, num_stars: 2, meal_date_id: x.meal_date.id), method: :post do %>
              <i class="far fa-star"></i>
            <% end %>
            <%= link_to customer_reviews_path(current_user, num_stars: 3, meal_date_id: x.meal_date.id), method: :post do %>
              <i class="far fa-star"></i>
            <% end %>
            <%= link_to customer_reviews_path(current_user, num_stars: 4, meal_date_id: x.meal_date.id), method: :post do %>
              <i class="far fa-star"></i>
            <% end %>
            <%= link_to customer_reviews_path(current_user, num_stars: 5, meal_date_id: x.meal_date.id), method: :post do %>
              <i class="far fa-star"></i>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

