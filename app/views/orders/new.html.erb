<div class="container">
  <div class="row">
    <div class="col-sm-10 col-lg-offset-3 col-lg-6" id="order-new">

      <h3>Confirm your order</h3>
      <h4><%= @meal.name %> </h4>
      <div class='order-photo-container'>
        <div id='order-photo' style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url("<%= image_path @meal.photo %>");'>
        </div>
      </div>
      <div id="description">
      <p><%= @meal.description %></p>
      </div>
      <br>
      <div id="price">
      <% if @order.pre_order %>
      <b><p>Today's price:</p></b>
      <p><%= ((@order.order_price_cents).to_f/100)%>€</p>
      <% else %>
      <b><p>Pre-order price:</p></b>
      <p><%=((@order.order_price_cents).to_f/100)%>€</p>
      <% end %>
      </div>

      <div class="col-sm-1 col-lg-offset-3 col-lg-6" id="order-input">
        <%= simple_form_for([@meal_date, @order]) do |f| %>
        <%= f.input :quantity, label: false, placeholder: "quantity" %>
        <%= f.submit class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>



